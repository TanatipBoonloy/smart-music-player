<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:clipToPadding="false"
    tools:context="kmitl.ce.smart_music_player.ui.PlaylistActivity">

    <LinearLayout
        android:id="@+id/playlist_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="false">

    <android.support.v7.widget.Toolbar
        android:id="@+id/music_list_toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPlaybar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Songs"
            android:textColor="@color/colorText"/>

    </android.support.v7.widget.Toolbar>

        <view
            android:id="@+id/recycler_view"
            class="android.support.v7.widget.RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <android.support.v7.widget.Toolbar
        android:id="@+id/music_list_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPlaybar"
        android:visibility="visible"
        android:minHeight="0dp">

        <ImageButton
            android:id="@+id/music_playing_button"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@color/colorPlaybar"/>

        <TextView
            android:id="@+id/music_playing_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"/>
    </android.support.v7.widget.Toolbar>
    </LinearLayout>
   </LinearLayout>
